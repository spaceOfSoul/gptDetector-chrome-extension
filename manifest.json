{
    "manifest_version": 3,
    "name": "gptDetector",
    "description": "인공지능이 생성한 텍스트인지 판별하여 줍니다.",
    "version": "1.0",
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content_script.js"]
    }],

    "permissions": [
        "activeTab"
    ]
}